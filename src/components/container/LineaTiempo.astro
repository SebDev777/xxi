---
import { lineatiempo } from "../../scripts/listas/lineatiempo";
import TimeLine from "./TimeLine";
---

<section class="design-section">
    <h1 class="gradient-text time-line-title">
        Algunos de los avances tecnológicos y científicos más importantes del siglo XXI
    </h1>
    <div class="timeline">
        {
            lineatiempo.map((item, index) => {
                return index % 2 === 0 ? (
                    <TimeLine inversed={false} info={item} />
                ) : (
                    <TimeLine inversed={true} info={item} />
                );
            })
        }
        <!-- Secuencia de la linea de tiempo 
        timeline-empty
        timeline-middle (timeline-circle)
        timeline-component
        --
        timeline-component
        timeline-middle
        timeline-empty
        */
        -->
    </div>
</section>

<style is:global>
    .time-line-title {
        justify-self: center;
        align-self: center;
        margin: 2vh; 
        text-align: center;
        font-size: 2.5em;
        width: 80vw;
    }

    .timeline-content p {
        color: white;
    }

    .design-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #191616;
        min-height: 100vh;
        padding: 100px 0;
        margin-bottom: 10vh;
    }

    .design {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .timeline {
        width: 80%;
        height: auto;
        max-width: 800px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
    }

    .timeline-content {
        padding: 20px;
        background: #242020;
        /* difuse a bit the shadow */
        -webkit-box-shadow: 0 10px 10px 2px rgba(154, 154, 154, 0.05);
        border-radius: 5px;
        padding: 1.75rem;
        transition: 0.4s ease;
        overflow-wrap: break-word !important;
        margin: 1rem;
        margin-bottom: 20px;
        border-radius: 6px;
    }

    .timeline-component {
        margin: 0px 20px 20px 20px;
    }

    @media screen and (max-width: 768px) {
        .time-line-title {
            font-size: 1.75em;
        }
    }

    @media screen and (min-width: 768px) {
        .timeline {
            display: grid;
            grid-template-columns: 1fr 3px 1fr;
        }
        .timeline-middle {
            position: relative;
            background-image: linear-gradient(
                45deg,
                #d66dda,
                var(--first-color),
                var(--second-color)
            );
            width: 3px;
            height: 100%;
        }
        .main-middle {
            opacity: 0;
        }
        .timeline-circle {
            position: absolute;
            top: 0;
            left: 50%;
            width: 15px;
            height: 15px;
            border-radius: 50%;
            background-image: linear-gradient(
                45deg,
                #d66dda,
                var(--first-color),
                var(--second-color)
            );
            -webkit-transform: translateX(-50%);
            transform: translateX(-50%);
        }
    }
</style>
