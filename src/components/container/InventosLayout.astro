---
import Telefonos from "./inventos/Telefonos.astro"
import CloudComputing from "./inventos/CloudComputing.astro";
import Redes5G from "./inventos/Redes5G.astro";
import RealidadAumentada from "./inventos/RealidadAumentada.astro";
import Impresion3D from "./inventos/Impresion3D.astro";
import IoT from "./inventos/IoT.astro";
import IA from "./inventos/IA.astro";
import Drones from "./inventos/Drones.astro";
---

<div class="inventos">
    <Telefonos />
    <CloudComputing />
    <Redes5G />
    <RealidadAumentada />
    <Impresion3D />
    <IoT />
    <IA />
    <Drones />
</div>

<style is:global>
    .title {
        display: flex;
        flex-direction: row;
        justify-content: left;
        align-items: center;
        gap: 20px;
        margin-top: 5vh;
    }

    .title img {
        width: 50px;
        height: 50px;
    }

    .CloudComputing {
        width: 90vw;
        justify-self: center;
        align-self: center;
        margin-top: 5vh;
        text-align: justify;

    }

    .Redes5G, .RealidadAumentada, .Telefonos, .Impresion3D, .InternetDeLasCosas {
        width: 80vw;
    }

    .Impresion3D .cards .card {
        font-size: 14px;
        padding: 10px;
        margin: 10px;
        min-height: 80px;
        max-width: 250px;
    }

    .Impresion3D, .Telefonos .cards {
        gap: 10px;
        padding: 20px;
        justify-content: center;
        & .card {
            max-width: 300px;
            max-height: 300px;
        }
    }

    .visuals {
        display: flex;
        justify-content: left;
        align-items: left;
        flex-direction: row;
        gap: 20px;
        margin-bottom: 20px;

        & .list {
            display: flex;
            flex-direction: row;
            justify-content: left;
            align-items: center;
            gap: 20px;
        }
    }

    .list:hover {
        cursor: pointer;
        transform: scale(1.2);
        transition: transform 0.3s ease-in-out;
        
        & p {
            background: var(--main-gradient);
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
			background-clip: text;
			transition: all 0.3s ease-in-out;
        }

        & .up {
            transform: translate(5px, -10px) rotate(180deg);
            transition: transform 0.3s ease-in-out;
        }

        & .down {
            transform: translate(5px, 10px) rotate(0deg);
            transition: transform 0.3s ease-in-out;
        }
    }

    .list:not(:hover) {
        transform: scale(1);
        transition: transform 0.3s ease-in-out;
    }

    .arrow {
        width: 50px;
        height: 50px;
    }

    .arrow.up {
        transform: rotate(180deg);
    }

    .rows {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: top;
        flex-direction: row;
        gap: 2%;

        text-align: justify;

        & .row {
            width: 40vw;
        }
    }

    ul li::marker {
        color: var(--first-color);
    }

    .inventos {
		display: flex;
		justify-content: left;
		align-items: left;
		flex-direction: column;
		margin-left: 10vw;
	}

    .cards {
		display: flex;
        flex-wrap: wrap;
		justify-content: center;
		align-items: center;
		gap: 5%;
		padding: 40px;
	}

    .description {
        background: url("../../assets/background.svg") no-repeat center fixed;
		box-shadow: 0 10px 10px rgba(0, 0, 0, 0.2);
		border-radius: 10px;
		padding: 20px;
		margin: 20px;
    }

    .card {
		background-color: rgba(255, 255, 255, 0.9);
		box-shadow: 0 10px 10px rgba(0, 0, 0, 0.2);
		border-radius: 10px;
		padding: 20px;
		margin: 20px;
        max-width: 400px;
		text-align: center;
		color: #333;
	}

    @media screen and (max-width: 768px) {
        .rows {
            flex-direction: column;
            gap: 20px;
            justify-content: center;
            align-items: center;

            & .row {
                width: 90%;
            }
        }

        .visuals {
            flex-direction: column;
            gap: 20px;
            justify-content: center;
            align-items: center;
        
            & .list {
                alignt-items: center;
                justify-content: center;
            }
        }
    }
</style>