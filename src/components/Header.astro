---
import uscologo from '../assets/usco.svg';
import background from '../assets/background.svg';
---

<div id="container">
	<img id="background" src={background.src} alt="" fetchpriority="high" />
	<main>
		<section id="hero">
			<div class="top-container">
				<img class="usco-logo" src={uscologo.src} alt="Usco Logo" />
				<h1 class="main-title">
					AVANCES TECNOLÓGICOS Y CIENTÍFICOS DEL <span class="gradient-text">SIGLO XXI</span>
				</h1>
			</div>
		</section>
	</main>
</div>

<style>
	.main-title {
		font-size: min(2em, 3em);
		margin: auto;
	}
	.top-container {
		/* Centering the image and text */
		align-items: center;
		display: flex;
		justify-content: center;
		flex-wrap: wrap;

		& img {
			margin-right: 20px;
		}
	}
	.usco-logo {
		width: min(150px, 300px);
		height: auto;
		margin-bottom: 16px;
	}
	#container {
		margin-top: 20vh;
	}

	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(10px);
	}

	main {
		height: 100%;
		display: flex;
		justify-content: center;
	}

	#hero {
		display: flex;
		align-items: center;
		flex-direction: column;
		justify-content: center;
		text-justify: inter-word;
		text-align: center;
		padding: 16px;
	}

	h1 {
		font-size: 22px;
		margin-top: 0.25em;
	}

	h2 {
		margin-top: 0.25em;
	}

	#links {
		display: flex;
		gap: 16px;
	}

	#links a {
		display: flex;
		align-items: center;
		padding: 10px 12px;
		color: #111827;
		text-decoration: none;
		transition: color 0.2s;
	}

	#links a:hover {
		color: rgb(78, 80, 86);
	}

	#links a svg {
		height: 1em;
		margin-left: 8px;
	}

	#links a.button {
		color: white;
		background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
		box-shadow:
			inset 0 0 0 1px rgba(255, 255, 255, 0.12),
			inset 0 -2px 0 rgba(0, 0, 0, 0.24);
		border-radius: 10px;
	}

	#links a.button:hover {
		color: rgb(230, 230, 230);
		box-shadow: none;
	}
</style>
