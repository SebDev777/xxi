---
interface Props {
    list: Array<{
        name: string, description?: string, items?: string[]
    }>
}

const { list } = Astro.props
---

<div class="cards">
    {list.map(item => (
        <div class="card hover-anim">
            <h3>{item.name}</h3>
            <slot />
            {item.description && <p>{item.description}</p>}
            {item.items && (
                <ul class="card-ul">
                    {
                        item.items.map(list => (
                            <li>{list}</li>
                        ))
                    }
                </ul>
            )}
        </div>
    ))}
</div>

<style>
    .cards {
		display: flex;
        flex-wrap: wrap;
		justify-content: center;
		align-items: center;
		gap: 5%;
		padding: 40px;
	}

    .card {
		background-color: var(--background-color);
		box-shadow: 0 10px 10px rgba(0, 0, 0, 0.2);
		border-radius: 10px;
		padding: 20px;
		margin: 20px;
        max-width: 400px;
		text-align: center;
	}

    .card-ul li {
        text-align: left;
    }
</style>