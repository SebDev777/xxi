---
import InventosLayout from "./container/InventosLayout.astro"
import Introduccion from "./container/Introduccion.astro";
import LineaTiempo from "@components/LineaTiempo.astro";

import { lineatiempo } from "@scripts/index/lineatiempo";
---

<main id="container">
	<Introduccion />
	<LineaTiempo name="Algunos de los avances tecnológicos y científicos más importantes del siglo XXI" content={lineatiempo} />
	<h1 class="title">Principales inventos</h1>
	<InventosLayout />
</main>

<style>
	.container {
		display: flex;
		align-items: center;
		flex-direction: column;
		text-align: center;
	}

	.title {
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		font-size: 3em;
	}
</style>