---
import Telefonos from "./inventos/Telefonos.astro"
import CloudComputing from "./inventos/CloudComputing.astro";
import Redes5G from "./inventos/Redes5G.astro";
import RealidadAumentada from "./inventos/RealidadAumentada.astro";
import Impresion3D from "./inventos/Impresion3D.astro";
import IoT from "./inventos/IoT.astro";
import IA from "./inventos/IA.astro";
import Drones from "./inventos/Drones.astro";
---

<section class="inventos">
    <Telefonos />
    <CloudComputing />
    <Redes5G />
    <RealidadAumentada />
    <Impresion3D />
    <IoT />
    <IA />
    <Drones />
</section>

<style is:global>
    .inventos {
		display: flex;
		justify-content: left;
		align-items: left;
		flex-direction: column;
		margin-left: 10vw;
	}
    .title {
        display: flex;
        flex-direction: row;
        justify-content: left;
        align-items: center;
        gap: 20px;
        margin-top: 5vh;
    }

    .title img {
        width: 50px;
        height: 50px;
    }

    .Redes5G, .RealidadAumentada, .Telefonos, .Impresion3D, .InternetDeLasCosas {
        width: 80vw;
    }

    .Impresion3D, .Telefonos .cards {
        gap: 10px;
        padding: 20px;
        justify-content: center;
        & .card {
            max-width: 300px;
            max-height: 300px;
        }
    }  

    ul li::marker {
        color: var(--first-color);
    }
</style>