---
import InventosLayout from "./container/InventosLayout.astro"
import Introduccion from "./container/Introduccion.astro";
import LineaTiempo from "./container/LineaTiempo.astro";
---

<div id="container">
	<Introduccion />
	<LineaTiempo />

	<h1 class="title">Principales inventos</h1>
	<InventosLayout />
</div>

<style>
	.container {
		display: flex;
		align-items: center;
		flex-direction: column;
		text-align: center;
	}

	.title {
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		font-size: 3em;
	}
</style>