---
interface Props {
	section: string
}

import BarraNavegacion from "@components/BarraNavegacion.astro";
import Toggler from "@components/DarkMode"
import { ClientRouter, fade } from "astro:transitions";

const { section } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
		<title>Siglo XXI</title>
		<ClientRouter />
	</head>
	<body>
		<BarraNavegacion section={section}>
			<Toggler client:load transition:animate={fade({duration: "0.4s"})} />
		</BarraNavegacion>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--background-color: rgb(255, 255, 255);
		--background-color2: rgb(239, 239, 239);
		--background-color3: rgb(200, 200, 200);
		--text-color: rgb(27, 27, 27);
		--first-color: #d83333;
		--second-color: #f041ff; 
		--main-gradient: linear-gradient(14deg, var(--first-color) 0%, var(--second-color) 100%);
		--main-color: #f041ff;
	}
	html,
	body {
		font-family: Poppins, sans-serif;
		margin: 0;
		width: 100%;
		height: 100%;
	}

	.gradient-text {
		background: var(--main-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	@keyframes gradient-border {
		0%, 50%, 100% {
			border-color: var(--first-color);
		}
		25%, 75% {
			border-color: var(--second-color);
		}
	}

	.hover-anim {
		transition: all 0.3s ease-in-out;
	}

	.hover-anim:hover {
		background-color: var(--background-color2);
		box-shadow: 0 15px 20px rgba(230, 230, 230, 0.1);
		transition: all 0.3s ease-in-out;
		transform: scale(1.02) translateY(10px);
		border: 2px solid transparent;
		animation: gradient-border 3s linear infinite;

		& h1, h2, h3 {
			background: var(--main-gradient);
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
			background-clip: text;
			transition: all 0.3s ease-in-out;
		}
	}

	.hover-anim:not(:hover) {
		box-shadow: 0 10px 10px rgba(0, 0, 0, 0.2);
		transition: all 0.3s ease-in-out;
		transform: scale(1);

		& h1, h2, h3 {
			background: var(--text-color);
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
			background-clip: text;
			transition: all 0.3s ease-in-out;
		}
	}

	h1, h2, h3, h4, h5, h6, p, li {
		color: var(--text-color);
		transition: all 0.3s ease-in-out;
	}

	h2 {
		margin: 0 0 1em;
		font-weight: normal;
		font-size: 20px;
	}

	p {
		font-size: 16px;
		line-height: 24px;
		letter-spacing: -0.006em;
		margin: 0;
	}
	@media screen and (max-width: 768px) {
		#container {
			display: flex;
			flex-direction: column;
		}

		#hero {
			display: block;
			padding-top: 10%;
		}

		h1 {
			line-height: 1.5;
		}
	}
</style>
